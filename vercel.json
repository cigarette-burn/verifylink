{
  "version": 2,
  "builds": [
    {
      "src": "api/handler.go",
      "use": "@vercel/go",
      "config": {
        "includeFiles": ["templates/*", "public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(css|js)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "/api/handler.go"
    }
  ]
}
